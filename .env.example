# Database Configuration
DB_CONNECTION_STRING=postgresql://rpgf_user:rpgf_password@localhost:5432/rpgf_db
REDIS_URL=redis://localhost:6379

# Cache Configuration
CACHE_VERSION=1
CACHE_DEFAULT_TTL_SECONDS=3600

# JWT Configuration for SIWE
JWT_SECRET= # Replace with a long, random, secure string
JWT_EXPIRATION_MINUTES=60 # How long access tokens are valid for (default 60 min, should be short)
REFRESH_JWT_EXPIRATION_MINUTES=43200 # How long refresh tokens are valid for (default 30 days, can be long)

# Drips GraphQL API Configuration, required for submitting applications
DRIPS_GQL_API_URL=string
DRIPS_GQL_API_KEY=string

FERN_KYC_API_KEY=string
FERN_KYC_WEBHOOK_SECRET=string

TREOVA_KYC_WEBHOOK_SECRET=string

# CORS Configuration
# By default, CORS is restricted to https://*.drips.network.
# Set to true to allow all origins (useful for local development).
CORS_ALLOW_ALL_ORIGINS=false
